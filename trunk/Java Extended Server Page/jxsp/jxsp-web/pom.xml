			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>net.sf.jxsp</groupId>
			<artifactId>jxsp-core</artifactId>
			<version>${release.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.jxsp</groupId>
			<artifactId>jxsp-common</artifactId>
			<version>${release.version}</version>
