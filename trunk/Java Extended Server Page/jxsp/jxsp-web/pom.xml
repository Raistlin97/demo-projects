		<dependency>
			<groupId>net.sf.jxsp</groupId>
			<artifactId>jxsp-tld</artifactId>
			<version>${release.version}</version>
		</dependency>
		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jsp-api</artifactId>
		</dependency>
