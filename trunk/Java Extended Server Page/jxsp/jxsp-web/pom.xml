	<groupId>net.sf.jxsp</groupId>
	<artifactId>jxsp-web</artifactId>
	<version>${release.version}</version>
	<packaging>war</packaging>
	<name>jxsp-web Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<dependencies>
