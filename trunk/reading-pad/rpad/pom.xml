			<id>default</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<modules>
				<module>rpad-common</module>
				<module>rpad-bod</module>
				<module>rpad-codec</module>
				<module>rpad-resources</module>
				<module>rpad-model</module>
				<module>rpad-compiler</module>
				<module>rpad-remoting</module>
				<module>rpad-service</module>
				<module>rpad-historyManager</module>
				<module>rpad-application</module>
				<module>rpad-mobility</module>
				<module>rpad-launcher</module>
				<module>rpad-webapps</module>
			</modules>
		</profile>
		<profile>
			<id>desktop-app</id>
			<modules>
				<module>rpad-common</module>
				<module>rpad-bod</module>
				<module>rpad-codec</module>
				<module>rpad-resources</module>
				<module>rpad-model</module>
				<module>rpad-compiler</module>
				<module>rpad-remoting</module>
				<module>rpad-service</module>
				<module>rpad-historyManager</module>
				<module>rpad-application</module>
			</modules>
		</profile>
		<profile>
			<id>mobile-app</id>
			<modules>
				<module>rpad-common</module>
				<module>rpad-bod</module>
				<module>rpad-codec</module>
				<module>rpad-resources</module>
				<module>rpad-model</module>
				<module>rpad-compiler</module>
				<module>rpad-remoting</module>
				<module>rpad-service</module>
				<module>rpad-historyManager</module>
				<module>rpad-mobility</module>
			</modules>
		</profile>
		<profile>
			<id>web-app</id>
			<modules>
				<module>rpad-common</module>
				<module>rpad-bod</module>
				<module>rpad-codec</module>
				<module>rpad-resources</module>
				<module>rpad-model</module>
				<module>rpad-compiler</module>
				<module>rpad-remoting</module>
				<module>rpad-service</module>
				<module>rpad-historyManager</module>
