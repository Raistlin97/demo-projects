    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>

    <!-- Error pages -->
    <error-page id="error_404">
        <error-code>404</error-code>
        <location>/error/404.htm</location>
    </error-page>
    <error-page id="error_403">
        <error-code>403</error-code>
        <location>/static/error/403.html</location>
    </error-page>
    <error-page id="error_500">
        <error-code>500</error-code>
        <location>/static/error/500.html</location>
    </error-page>
	
	<session-config>
		<session-timeout>60</session-timeout>
		<cookie-config>
			<name>QMAPPSESSIONID</name>
			<!-- Specifies whether any session tracking cookies created by this web 
				application will be marked as HttpOnly -->
			<http-only>true</http-only>
		</cookie-config>
	</session-config>
	
