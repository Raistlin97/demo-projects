					<target>${jdk.version}</target>
				</configuration>
			</plugin>

			<!-- Copy static web files before executing gwt:run -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<goals>
							<goal>exploded</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<webappDirectory>${webappDirectory}</webappDirectory>
				</configuration>
			</plugin>

			<!-- Copy the appropriate config files for target environment -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>cp-config</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy
									tofile="${project.build.directory}/${project.build.finalName}/WEB-INF/config/environment.properties"
									file="${app.config.dir}/properties/deploy/environment-${environment.type}.properties" />
								<copy
									tofile="${project.build.directory}/${project.build.finalName}/WEB-INF/config/log4j.xml"
									file="${app.config.dir}/logger/log4j-${environment.type}.xml" />
							</tasks>
						</configuration>

					</execution>
					<execution>
						<id>cp-war</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete includeEmptyDirs="true">
  									<fileset dir="${app.deploy.dir}/${project.build.finalName}" 
  									includes="**/*"/>
								</delete>
								<!-- <copy 
									file="${project.build.directory}/${project.build.finalName}.war"
									tofile="${app.deploy.dir}/${project.build.finalName}.war"
									 /> -->
								<copydir src="${project.build.directory}/${project.build.finalName}"
           							dest="${app.deploy.dir}/${project.build.finalName}"
           							includes="**/*"/>
							</tasks>
						</configuration>

					</execution>
				</executions>
			</plugin>


