<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.sf.tools.gsplit</groupId>
    <artifactId>gsplit</artifactId>
    <version>${release.version}</version>
    <name>gsplit</name>
    <description>Green Splitter</description>
	
	
	
    <properties>
        <release.version>0.0.2</release.version>
        <jdk.version>1.6</jdk.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.test.skip>true</maven.test.skip>
        <release.dir>../dist</release.dir>
        <bin.dir>../bin</bin.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.14</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging-api</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>
    </dependencies>

    <build>

		
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>net.sf.tools.gsplit.GreenSplitter</mainClass>
                            <addClasspath>true</addClasspath>
                            <addExtensions>false</addExtensions>
                            <classpathPrefix>lib/</classpathPrefix>
                            <classpathMavenRepositoryLayout>false</classpathMavenRepositoryLayout>
                        </manifest>
                        
                    </archive>
					
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${release.dir}/${artifactId}-${release.version}/lib/</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>false</overWriteSnapshots>
                            <overWriteIfNewer>true</overWriteIfNewer>
                            <useRepositoryLayout>false</useRepositoryLayout>
                        </configuration>
                    </execution>
                </executions>
            </plugin>            
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <!-- Coping JAR to release directory -->
                    <execution>
                        <id>defaultcopy</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <!-- Coping JAR to release directory -->
                                <copy todir="${release.dir}/${artifactId}-${release.version}/"
                                      overwrite="true" failonerror="true" includeEmptyDirs="true">
                                    <fileset dir="target">
                                        <include name="${artifactId}-${release.version}.jar" />
                                    </fileset>
                                </copy>
                                <copy todir="${release.dir}/${artifactId}-${release.version}/"
                                      overwrite="true" failonerror="true" includeEmptyDirs="true">
                                    <fileset dir="${bin.dir}">
                                        <include name="run-${release.version}.bat" />
                                        <include name="run-${release.version}.sh" />
                                    </fileset>
                                </copy>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
    
    
</project>